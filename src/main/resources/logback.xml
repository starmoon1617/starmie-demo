<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<configuration>
    <Property name="LOG_PATTERN" value="[%-5p]%date{yyyy-MM-dd HH:mm:ss.SSS}[%t]%c:%m%n" />
    
        <!-- Stop output INFO at start -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <!-- reset all previous level configurations of all j.u.l. loggers -->
        <resetJUL>true</resetJUL>
    </contextListener>
    
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Mybatis -->
    <logger name="mybatis" level="debug" additivity="false">
        <appender-ref ref="console" />
    </logger>
    <logger name="MySQL" level="debug" additivity="false">
        <appender-ref ref="console" />
    </logger>
    <logger name="io.github.starmoon1617.starmie.demo" level="debug" additivity="false">
        <appender-ref ref="console" />
    </logger>
    <logger name="io.github.starmoon1617.starmie.boot" level="debug" additivity="false">
        <appender-ref ref="console" />
    </logger>
    <logger name="org.springframework" level="warn" additivity="false">
        <appender-ref ref="console" />
    </logger>
    <logger name="org.springframework.boot" level="warn" additivity="false">
        <appender-ref ref="console" />
    </logger>
    <logger name="org.springframework.jdbc" level="warn" additivity="false">
        <appender-ref ref="console" />
    </logger>
    <root level="warn">
        <appender-ref ref="console" />
    </root>
</configuration>